DJANGO_DEBUG=0
DJANGO_SECRET_KEY=change-me
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost
DJANGO_CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000
DJANGO_BEHIND_PROXY=1
DJANGO_SECURE_COOKIES=1
DJANGO_FORCE_HTTPS=1
DJANGO_SESSION_COOKIE_AGE=28800
DJANGO_SESSION_EXPIRE_AT_BROWSER_CLOSE=0
DJANGO_SESSION_SAVE_EVERY_REQUEST=1
DATABASE_URL=
DJANGO_DB_CONN_MAX_AGE=60
DJANGO_DB_SSL_REQUIRE=0

# Cache
DJANGO_CACHE_BACKEND=redis
DJANGO_CACHE_LOCATION=redis://127.0.0.1:6379/1
DJANGO_CACHE_TIMEOUT=300
SERVICE_DASHBOARD_CACHE_TTL=60

# Celery
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0
CELERY_TASK_ALWAYS_EAGER=0

# Monitoring and alerting
DJANGO_ADMINS=Ops:ops@example.com
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.05
SENTRY_ENVIRONMENT=production

# Optional static manifest mode
DJANGO_MANIFEST_STATIC=0

# Optional bootstrap admin account (used by `python manage.py ensure_superuser`)
DJANGO_SUPERUSER_USERNAME=
DJANGO_SUPERUSER_EMAIL=
DJANGO_SUPERUSER_PASSWORD=
